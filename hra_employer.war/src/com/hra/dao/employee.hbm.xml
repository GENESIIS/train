<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
 "-//Hibernate/Hibernate Mapping DTD//EN"
 "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="Employee" table="employee">
		<meta attribute="class-description">
			This class contains the Employee detail.
		</meta>
		<id name="employeeTblID" type="int" column="employeeTblID">
			<generator class="native" />
		</id>
		<property name="employeeID" column="employeeID" type="string" />
		<property name="employeeName" column="employeeName" type="string" />
		<property name="employeeDesignation" column="employeeDesignation" type="string" />
		<property name="employeeEmail" column="employeeEmail" type="string" />
		<property name="employeeDOB" column="employeeDOB" type="date" />
		<property name="employeeSalary" column="employeeDOB" type="date" />
		<property name="employeeGender" column="employeeGender" type="string" />
		<property name="employeeAddress" column="employeeAddress" type="string" />
		<property name="employeeMobileNO" column="employeeMobileNO" type="string" />
		<property name="employeeSalary" column="employeeSalary" type="double" />
		<property name="departmentID" column="departmentID" type="string" />
		<property name="dateOfJoin" column="dateOfJoin" type="date" />
		<property name="updatedBy" column="updatedBy" type="string" />
		<property name="updatedOn" column="updatedOn" type="date" />
	</class>
</hibernate-mapping>